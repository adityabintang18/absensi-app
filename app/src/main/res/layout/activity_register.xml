<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="25dp">

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/input_name_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_register"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Name" />

    <EditText
        android:id="@+id/input_user_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_name_regis"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="25dp"
        android:hint="Username"
        />

    <EditText
        android:id="@+id/input_pass_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@+id/input_user_regis"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Register"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/load_salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/salad_loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        />

</RelativeLayout>